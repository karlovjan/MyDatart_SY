<?xml version="1.0" encoding="UTF-8"?>
<switchyard xmlns="urn:switchyard-config:switchyard:2.0" xmlns:bean="urn:switchyard-component-bean:config:2.0" xmlns:camel="urn:switchyard-component-camel:config:2.0" xmlns:sca="http://docs.oasis-open.org/ns/opencsa/sca/200912" xmlns:soap="urn:switchyard-component-soap:config:2.0" xmlns:trfm="urn:switchyard-config:transform:2.0" xmlns:vldt="urn:switchyard-config:validate:2.0" name="myDatart-erpUpdate" targetNamespace="urn:cz.datart.jboss.myDatart.erpUpdate:myDatart-erpUpdate:1.0.0">
  <sca:composite name="myDatart-erpUpdate" targetNamespace="urn:cz.datart.jboss.myDatart.erpUpdate:myDatart-erpUpdate:1.0.0">
    <sca:component name="BambinoErpUpdateServiceRoute">
      <camel:implementation.camel>
        <camel:java class="cz.datart.jboss.myDatart.erpUpdate.BambinoErpUpdateRoute"/>
      </camel:implementation.camel>
      <sca:service name="BambinoErpUpdateService">
        <sca:interface.wsdl interface="wsdl/bambinoErpUpdate.wsdl#wsdl.porttype(BambinoErpUpdate)"/>
      </sca:service>
      <sca:reference name="ErpUpdateTransformService">
        <sca:interface.wsdl interface="wsdl/bambinoErpUpdate.wsdl#wsdl.porttype(BambinoErpUpdate)"/>
      </sca:reference>
    </sca:component>
    <sca:service name="BambinoErpUpdateService" promote="BambinoErpUpdateServiceRoute/BambinoErpUpdateService">
      <sca:interface.wsdl interface="wsdl/bambinoErpUpdate.wsdl#wsdl.porttype(BambinoErpUpdate)"/>
      <soap:binding.soap name="ErpUpdateSoap">
        <soap:contextMapper soapHeadersType="VALUE"/>
        <soap:messageComposer unwrapped="true"/>
        <soap:wsdl>wsdl/bambinoErpUpdate.wsdl</soap:wsdl>
        <soap:socketAddr>:${soapPort}</soap:socketAddr>
        <soap:contextPath>${myDatart.erp.update.context.path}</soap:contextPath>
      </soap:binding.soap>
    </sca:service>
    <sca:reference name="AxaptaWS" multiplicity="0..1" promote="ErpUpdateTransformation/AxaptaWS">
      <sca:interface.wsdl interface="wsdl/myDatartAxaptaWS.wsdl#wsdl.porttype(IMyDatartAxaptaWS)"/>
      <soap:binding.soap name="erpUpdateUserSoap">
        <soap:contextMapper soapHeadersType="VALUE"/>
        <soap:messageComposer unwrapped="true"/>
        <soap:wsdl>wsdl/myDatartAxaptaWS.wsdl</soap:wsdl>
        <soap:endpointAddress>${myDatart.axapta.ws.endpoint}</soap:endpointAddress>
        <soap:timeout>${myDatart.ws.request.timeout}</soap:timeout>
      </soap:binding.soap>
    </sca:reference>
    <sca:component name="ErpUpdateTransformation">
      <camel:implementation.camel>
        <camel:java class="cz.datart.jboss.myDatart.erpUpdate.ErpUpdateTransformServiceRoute"/>
      </camel:implementation.camel>
      <sca:reference name="AxaptaWS">
        <sca:interface.wsdl interface="wsdl/myDatartAxaptaWS.wsdl#wsdl.porttype(IMyDatartAxaptaWS)"/>
      </sca:reference>
      <sca:service name="ErpUpdateTransformService">
        <sca:interface.wsdl interface="wsdl/bambinoErpUpdate.wsdl#wsdl.porttype(BambinoErpUpdate)"/>
      </sca:service>
    </sca:component>
  </sca:composite>
  <domain>
    <properties load="application.properties"/>
  </domain>
</switchyard>